<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="de.hhu.propra16.TDDT.StartController"
          xmlns:fx="http://javafx.com/fxml" hgap="30" vgap="20">
    <Label text="Bitte wählen Sie eine der folgenden New.Übungen" translateX="150" translateY="0" Stylesheets="styler.css"/>
    <Button fx:id="button1" alignment="CENTER" translateX="150" translateY="100" minWidth="400" minHeight="100" onMouseEntered="#buttonDescription" onAction="#buttonAction"/>
    <Button fx:id="button2" alignment="CENTER" translateX="150" translateY="200" minWidth="400" minHeight="100" onMouseEntered="#buttonDescription" onAction="#buttonAction"/>
    <Button fx:id="button3" alignment="CENTER" translateX="150" translateY="300" minWidth="400" minHeight="100" onMouseEntered="#buttonDescription" onAction="#buttonAction"/>
    <Button fx:id="button4" alignment="CENTER" translateX="150" translateY="400" minWidth="400" minHeight="100" onMouseEntered="#buttonDescription" onAction="#buttonAction"/>
    <Button text="Previous" translateY="10" translateX="600" onAction="#iterateUp">
        <graphic>
            <ImageView>
                <Image url="@/up-arrow.png" requestedWidth="20" requestedHeight="20"/>
            </ImageView>
        </graphic>
    </Button>
    <Button text="Next" translateY="500" translateX="600" minWidth="50" onAction="#iterateDown">
        <graphic>
            <ImageView>
                <Image url="@/down-arrow.png" requestedWidth="20" requestedHeight="20"/>
            </ImageView>
        </graphic>
    </Button>
</GridPane>